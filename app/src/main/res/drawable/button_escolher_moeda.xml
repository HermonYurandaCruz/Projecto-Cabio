<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient
                android:startColor="@color/Gold_yellow"
                android:centerColor="@color/Metallic_gold"
                android:endColor="@color/Gold_yellow"
                android:type="linear"
                android:angle="180"/>
        </shape>
    </item>

        <item
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
            <shape android:shape="rectangle">
                <corners android:radius="50dp"/>
                <solid android:color="@color/white"/>
            </shape>
    </item>
</layer-list>